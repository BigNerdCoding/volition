<section class="todaySection">
  <h1>Today</h1>
  <div class="calendarIcon">
    <div class="calendarIconTopBar"><span class="month"><%= Date.today.strftime('%B') %></span></div>
    <div class="calendarIconDay"><span class="day"><%= Date.today.strftime('%e') %></span></div>
  </div>
  <h2></h2>

  <%= react_component 'TodoList', todos: @todos %>
  <%= link_to 'All done', reflect_path, class: 'finishDayButton button' %>
</section>
