<%= content_for(:body_attributes, 'data-turbolinks=false') %>
<section class="appSection">
  <h1>Sign up</h1>

  <% if params[:guest] %>
    <p class="thanksForDemoing">
      Thanks for trying out the demo! If you can imagine Volition helping you to become more productive, sign up below!
    </p>
  <% end %>

  <div class="g-signin2" data-onsuccess='onSignIn'></div>

  <%= form_with url: '/login', id: 'google_signin', html: { style: 'display: none' } do |form| %>
    <%= form.hidden_field :google_id_token, id: 'google_id_token' %>
  <% end %>

  <div class="newUserForm">
    <%= form_for @user do |f| %>
      <div class="inputGroup">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="inputGroup">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="inputGroup">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="inputGroup flexRow flexAlignCenter">
        <%= f.submit 'Sign up' %>
        <% unless params[:guest] %>
          <%= link_to 'or log in', login_path %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
